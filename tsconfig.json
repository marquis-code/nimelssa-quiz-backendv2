{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true
    },
    "ts-node": {
        "esm": true, 
        "experimentalSpecifierResolution": "node"
      },
    "include": ["src/**/*"],
}