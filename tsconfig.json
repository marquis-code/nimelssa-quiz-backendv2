{
    "compilerOptions": {
        "module": "NodeNext",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "baseUrl": "src",
        "sourceMap": true,
        "outDir": "./build",
        "rootDir": "src",
        "noImplicitAny": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}