{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",  
        "module": "commonjs",  
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true      
    },
    "ts-node": {
        "esm": true, 
        "experimentalSpecifierResolution": "node"
      },
    "include": ["src/**/*"],
}